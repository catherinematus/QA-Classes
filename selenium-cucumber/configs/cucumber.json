{
  "default": {
    "paths": ["selenium-cucumber/features/**/*.feature"],
    "requireModule": ["ts-node/register", "dotenv/config"],
    "require": [
      "selenium-cucumber/src/step-definitions/**/*.ts",
      "selenium-cucumber/src/support/**/*.ts"
    ],
    "format": [
      "@cucumber/pretty-formatter",
      "json:selenium-cucumber/reports/report.json"
    ],
    "tags": "",
    "formatOptions": {
      "colorsEnabled": true,
      "theme": {
        "feature keyword": ["magenta", "bold"],
        "scenario keyword": ["red"],
        "step text": ["green"],
        "tag": ["blue"]
      }
    }
  }
}
